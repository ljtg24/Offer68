{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "process",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-std=c++11",
                "-lm",
                //"/home/hadoop/VSProjects/Offer68/include/listNode1.cpp",
                "/home/hadoop/VSProjects/Offer68/include/complexListNode.cpp",
                "/home/hadoop/VSProjects/Offer68/include/functools.cpp",
                "/home/hadoop/VSProjects/Offer68/include/binaryTree.cpp",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o"
            ],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "showReuseMessage": false
            },
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "args": [
                    "-g",
                    "-Wall",
                    "-std=c++11",
                    "-lm",
                    "${file}",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}.exe"
                ]
            }
        },
        {
            "label": "run",
            "type": "shell",
            "dependsOn": "build",
            "command": "${fileDirname}/${fileBasenameNoExtension}.o",
            "presentation": {
                "focus": true
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "windows": {
                "command": "${fileDirname}/${fileBasenameNoExtension}.exe"
            }
        },
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ]
}